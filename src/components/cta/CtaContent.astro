---
import BtnLink from "../shared/BtnLink.astro";

const { title, description, mainImg, btnText } = Astro.props
const baseApiUrl = import.meta.env.STRAPI_URL;
---
<div class="flex flex-col gap-8 items-center">
  <BtnLink customClass="md:w-1/3 text-sm md:text-base text-secondary border-opacity-30" label={btnText} url="#" outlined={true} />
  <h1 class="md:w-2/3 text-gradient text-4xl md:text-7xl font-medium text-center p-4">{title}</h1>
  <p class="md:w-1/3 opacity-65 text-center text-sm">{description}</p>
  <div class="flex justify-center gap-4">
      <BtnLink label="Download the app" url="#" />
      <BtnLink label="Talk to an expert" outlined={true} url="#" />
  </div>
  <img src=`${baseApiUrl}/${mainImg}` alt="sass dashboard with statistic and admin menu" class="clip mt-4" />
</div>