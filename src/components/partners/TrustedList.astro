---
import { Image } from 'astro:assets';
const images = await Astro.glob('/src/assets/partners/*.{jpeg,jpg,png,gif,webp,svg}');
---

<ul class="flex gap-8 overflow-y-auto justify-start md:justify-center snap-x snap-mandatory p-8">
  { images.map((img) => {
      return(
        <li class="flex justify-center flex-shrink-0 items-center snap-center item">
          <Image src={img.default} alt="partner logo" />
        </li>
      )
    })
  }
</ul>